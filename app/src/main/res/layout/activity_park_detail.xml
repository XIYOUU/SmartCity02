<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".park.ParkDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#49A9F4">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="详情"
            android:textSize="20dp"></TextView>

        <ImageView
            android:id="@+id/list_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_list"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            ></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/parkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="parkName"
            android:layout_marginLeft="20dp"
            android:textSize="40dp"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parkName"
            android:text="距离"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="20dp"
            ></TextView>

        <TextView
            android:id="@+id/_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parkName"
            android:layout_toRightOf="@+id/distance"
            android:text="距离"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            ></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            ></TextView>

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:text="是否开放"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            ></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/car_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车位信息"
            android:layout_marginLeft="10dp"
            ></TextView>

        <TextView
            android:id="@+id/rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收费参考"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:layout_below="@+id/car_info"
            ></TextView>

        <TextView
            android:id="@+id/vacancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车位信息"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:layout_below="@+id/rates"
            ></TextView>

    </RelativeLayout>
</LinearLayout>